<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="paniuta.trackmywords" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SearchScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ResultScreen"
            android:label="@string/title_activity_result_screen"
            android:parentActivityName=".SearchScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="paniuta.trackmywords.SearchScreen" />
        </activity>
        <activity
            android:name=".LyricsScreen"
            android:label="@string/title_activity_lyrics_screen"
            android:parentActivityName=".ResultScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="paniuta.trackmywords.ResultScreen" />
        </activity>
    </application>

</manifest>
